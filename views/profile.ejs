<!DOCTYPE html>
<html>
  <head>
    <link rel="shortcut icon" href="/images/favicon.ico" type="image/x-icon" />
    <title>EventFlow - Profile</title>
    <link rel="stylesheet" href="/style.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
    />
  </head>
  <body>
    <!-- Top Navigation -->
    <header>
      <nav>
        <a href="/live-events" class="nav-link"
          ><i class="fas fa-bolt"></i><span> Live</span></a
        >
        <a href="/create-events" class="nav-link"
          ><i class="fas fa-calendar-alt"></i><span> Create Events</span></a
        >
        <a href="/profile" class="nav-link"
          ><i class="fas fa-user-circle"></i><span> Profile</span></a
        >
        <div class="menu-dropdown">
          <i class="fas fa-bars" id="menuIcon"></i>
          <div class="dropdown-content" id="menuDropdown">
            <a href="/logout">Log Out</a>
          </div>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <main>
      <div class="profile-header">
        <div class="profile-avatar">
          <i class="fas fa-user-circle"></i>
        </div>
        <h1 class="profile-name"><%= user.firstName %> <%= user.lastName %></h1>
        <p class="profile-email">
          <i class="fas fa-envelope"></i> <%= user.email %>
        </p>
      </div>

      <div class="profile-container">
        <div class="profile-section">
          <h3><i class="fas fa-map-marker-alt"></i> Location</h3>
          <p><%= user.location || 'Not specified' %></p>
        </div>

        <div class="profile-section">
          <h3><i class="fas fa-birthday-cake"></i> Age</h3>
          <p><%= user.age ? user.age + ' years old' : 'Not specified' %></p>
        </div>

        <div class="profile-section">
          <h3><i class="fas fa-info-circle"></i> Bio</h3>
          <p><%= user.bio || 'No bio added yet' %></p>
        </div>

        <div class="profile-section">
          <h3><i class="fas fa-calendar-plus"></i> Member Since</h3>
          <p>
            <%= new Date(user.createdAt).toLocaleDateString('en-US', { year:
            'numeric', month: 'long', day: 'numeric' }) %>
          </p>
        </div>
      </div>

      <div class="profile-actions">
        <button class="edit-profile-btn">
          <i class="fas fa-edit"></i> Edit Profile
        </button>
      </div>
    </main>
    <script src="/script.js"></script>
  </body>
</html>
